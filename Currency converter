import requests

def get_conversion_rate(from_currency, to_currency):
    url = f"https://api.exchangerate-api.com/v4/latest/{from_currency.upper()}"
    response = requests.get(url)
    data = response.json()
    rate = data['rates'].get(to_currency.upper())
    return rate

def convert_currency(from_currency, to_currency, amount):
    rate = get_conversion_rate(from_currency, to_currency)
    if rate:
        converted = round(amount * rate, 4)
        print(f"{amount} {from_currency.upper()} = {converted} {to_currency.upper()}")
    else:
        print(f"Conversion rate not found for {to_currency.upper()}.")

if __name__ == "__main__":
    from_curr = input("Enter source currency code (e.g., USD): ")
    to_curr = input("Enter target currency code (e.g., INR): ")
    amt = float(input("Enter amount: "))
    convert_currency(from_curr, to_curr, amt)
